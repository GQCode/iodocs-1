{
    "name": "TheraVid API",
    "description": "A StriveHub data exchange api.",
    "protocol": "rest",
    "basePath": "http://www.theravid-staging.com",
    "publicPath": "/v1",
    "auth": {
        "key": {
            "param": "api_key",
            "location": "query"
        }
    },
    "resources": {
        "TheraVid Identity Methods": {
            "methods": {
                "GetPatient": {
                    "name": "GetPatient",
                    "path": "/identity/patients/{id}/profile",
                    "httpMethod": "GET",
                    "description": "Get patient identity profile.",
                    "parameters": {
                        "id": {
                           "required":"Y",
                           "default":"",
                           "type":"string",
                           "description":"Provider ID"
                        }
                    }
                },
                "CreatePatient": {
                    "name": "CreatePatient",
                    "path": "/identity/patients",
                    "httpMethod": "POST",
                    "description": "Add a new patient to TheraVid",
                    "parameters": {
                      "custom_id": {
                         "required":"Y",
                         "refault":"548768",
                         "type":"string",
                         "description":"The EHR ID for a given patient."
		      },
                      "first_name": {
                         "required":"Y",
                         "default":"Bob",
                         "type":"string",
                         "description":"The first name of the patient."
                      },
                      "last_name": {
                         "required":"Y",
                         "default":"Jones",
                         "type":"string",
                         "description":"The last name of the patient."
                      },
                      "email": {
                         "required":"Y",
                         "default":"jones@example.com",
                         "type":"string",
                         "description":"The email of the patient."
                      },
                      "birthday": {
                         "required":"Y",
                         "default":"2000-3-24",
                         "type":"string",
                         "description":"The birthday of the patient."
                      }
                    }
                },
                "UpdatePatient": {
                    "name": "UpdatePatient",
                    "path": "/identity/patients/{id}/update",
                    "httpMethod": "PUT",
                    "description": "Updates data for a TheraVid patient",
                    "parameters": {
                      "id": {
                         "required":"Y",
                         "refault":"548768",
                         "type":"string",
                         "description":"The patient ID from the provider EHR."
                      },
                      "custom_id": {
                         "required":"Y",
                         "refault":"548768",
                         "type":"string",
                         "description":"The EHR ID from the clinic for a given patient."
		      },
                      "first_name": {
                         "required":"Y",
                         "default":"Bob",
                         "type":"string",
                         "description":"The first name of the patient."
                      },
                      "last_name": {
                         "required":"Y",
                         "default":"Jones",
                         "type":"string",
                         "description":"The last name of the patient."
                      },
                      "email": {
                         "required":"Y",
                         "default":"jones@example.com",
                         "type":"string",
                         "description":"The email of the patient."
                      },
                      "birthday": {
                         "required":"Y",
                         "default":"2000-3-24",
                         "type":"string",
                         "description":"The birthday of the patient."
                      }
                    }
                }
            }
        }
    }
}
